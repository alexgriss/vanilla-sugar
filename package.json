    "polished": "^4.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.30.1",
    "@storybook/addon-a11y": "^9.1.3",
